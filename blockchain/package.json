{
  "name": "brightbyte-blockchain",
  "version": "0.0.1",
  "description": "Implementation of the BrightByte Blockchain contracts. Uses Truffle.",
  "main": "",
  "private": true,
  "scripts": {
    "start:migrate": "npm run truffle:deploy",
    "preinstall": "rm -fr node_modules/*/node_modules/*/.git/",
    "truffle:migrate": "truffle migrate --reset",
    "posttruffle:migrate": "npm run update:contractsAddresses; npm run copy:contracts",
    "truffle:custom-deploy": "truffle migrate --network custom --reset",
    "posttruffle:custom-deploy": "npm run update:contractsAddresses; npm run copy:contracts",
    "truffle:besu": "truffle migrate --reset --network besu",
    "posttruffle:besu": "npm run update:contractsAddresses; npm run copy:contracts",
    "truffle:compile": "truffle compile",
    "truffle:deploy:test": "npm run ganache:quite & (npm run wait:ganache && npm run truffle:test)",
    "truffle:deploy": "npm run ganache:quite & (npm run wait:ganache && npm run truffle:migrate)",
    "wait:ganache": "wait-on -r http://localhost:7545",
    "ganache": "ganache-cli -p 7545 -i 5777",
    "ganache:quite": "ganache-cli -p 7545 -i 5777 -q",
    "remix:start": "remix-ide",
    "copy:contracts": "shx cp -r ./build/contracts/. ../webapp/src/assets/build",
    "update:contractsAddresses": "node migrations/updateAddresses.js",
    "truffle:test": "truffle test",
    "truffle:coverage": "truffle run coverage --network development",
    "linters-ci": "solium -d ./contracts"
  },
  "author": "Tribalyte Technologies",
  "license": "SEE LICENSE IN LICENSE.md",
  "dependencies": {
    "@openzeppelin/upgrades": "2.8.0",
    "@truffle/debug-utils": "4.2.5",
    "@truffle/hdwallet-provider": "1.0.42",
    "@truffle/environment": "0.2.21",
    "async": "3.2.0",
    "ganache-cli": "6.10.1",
    "remix-ide": "^0.10.3",
    "truffle": "^5.1.41",
    "truffle-assertions": "0.9.2",
    "truffle-core": "4.1.17",
    "truffle-test-utils": "0.1.0",
    "web3": "1.2.11",
    "keccak": "^3.0.1"
  },
  "devDependencies": {
    "ethlint": "1.2.5",
    "shx": "0.3.2",
    "solidity-coverage": "^0.7.10",
    "wait-on": "3.3.0"
  }
}
