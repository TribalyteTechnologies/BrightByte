{
	"name": "brightbyte-backend",
	"version": "0.0.1",
	"description": "Implementation of the BrightByte Backend. Uses Nest/Loki",
	"author": "Tribalyte Technologies",
	"license": "SEE LICENSE IN LICENSE.md",
	"private": true,
	"scripts": {
		"build": "shx rm -rf dist && tsc -p tsconfig.build.json && shx cp ../version.json ./dist/version.json && shx cp -r ./src/{www,templates} ./dist",
		"format": "prettier --write \"src/**/*.ts\"",
		"install:start": "npm install; npm start",
		"start": "ts-node -r tsconfig-paths/register src/main.ts",
		"start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
		"start:debug": "nodemon --config nodemon-debug.json",
		"prestart:prod": "shx rm -rf dist && npm run build",
		"start:prod": "node dist/main.js",
		"test": "jest --detectOpenHandles --forceExit",
		"lint": "tslint -p tsconfig.json -c tslint.json",
		"linters-ci": "npm run lint"
	},
	"dependencies": {
		"@nestjs-modules/mailer": "1.5.0",
		"@nestjs/common": "6.0.0",
		"@nestjs/core": "6.0.0",
		"@nestjs/platform-express": "6.0.0",
		"@nestjs/platform-socket.io": "6.5.3",
		"@nestjs/serve-static": "1.0.2",
		"@nestjs/websockets": "6.5.3",
		"@types/jest": "24.0.18",
		"@types/lokijs": "1.5.2",
		"jest": "24.9.0",
		"lokijs": "1.5.6",
		"nodemailer": "6.4.6",
		"pug": "2.0.4",
		"querystring": "0.2.0",
		"reflect-metadata": "0.1.13",
		"rxjs": "6.3.3",
		"ts-jest": "24.1.0",
		"web3": "1.2.1"
	},
	"devDependencies": {
		"@nestjs/cli": "6.6.4",
		"@nestjs/testing": "6.0.0",
		"@types/express": "4.16.0",
		"@types/node": "14.0.1",
		"@types/socket.io": "2.1.2",
		"@types/supertest": "2.0.7",
		"concurrently": "4.1.0",
		"htmlhint": "0.9.13",
		"nodemon": "1.18.9",
		"prettier": "1.15.3",
		"shx": "0.3.2",
		"supertest": "3.4.1",
		"ts-node": "8.1.0",
		"tsconfig-paths": "3.8.0",
		"tslint": "5.16.0",
		"tslint-eslint-rules": "5.4.0",
		"typescript": "3.9.2",
		"wait-on": "3.2.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"testEnvironment": "node",
		"collectCoverage": true
	}
}
